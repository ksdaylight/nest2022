        "cli": "cross-env NODE_ENV=development ./src/cli.js",
        "prebuild": "rimraf dist",
        "build": "rimraf dist && nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "cross-env NODE_ENV=development nest start > nest-start.log 2>&1",
        "start:dev": "cross-env NODE_ENV=development nest start --watch  > nest-start.log 2>&1",
        "start:debug": "cross-env NODE_ENV=development nest start --debug --watch > nest-start.log 2>&1",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:cov": "cross-env NODE_ENV=test jest --coverage",
        "test:debug": "cross-env NODE_ENV=development node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
